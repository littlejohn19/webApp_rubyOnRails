<% provide(:page_title, @event.title) %>

<div class="offset">
  <%= link_to 'Edytuj', edit_admin_event_path(@event), class: 'btn btn-success' %>
  <%= link_to 'Usuń', admin_event_path(@event), method: :delete, data: {confirm: 'Jesteś pewien?'}, class: 'btn btn-danger' %>


  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @event.title %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= @event.image %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @event.description %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= @event.date %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= @event.slug %>
  </p>

  <%= link_to 'Edit', edit_admin_event_path(@event) %> |
  <%= link_to 'Back', events_path %>
</div>
