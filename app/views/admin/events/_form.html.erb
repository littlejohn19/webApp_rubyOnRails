<%= form_with(model: event, local: true, html: {class: 'form-horizontal'}) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_field :title, id: :event_title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_field :image, id: :event_image, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_area :description, id: :event_description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :date, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.datetime_select :date, id: :event_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :adult_event, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.check_box :adult_event, {}, true, false %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :slug, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= form.text_field :slug, id: :event_slug, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-2">
    <%= form.submit "Zapisz", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
