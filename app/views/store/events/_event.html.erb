<div class="col-sm-6 col-lg-4">
  <div class="card">
    <div class="card-topper">
      <img class="img-responsive card-inside" src="<%= event.image %>" alt="image"/>
    </div>
    <div class="card-block">
      <h4 class="card-title">
        <%= link_to event.title, event %>
      </h4>
      <p class="event-date">Data wydarzenia: <%= event.date %></p>
      <p class="card-text"><%= truncate(event.description, length: 100) %></p>
      <%= link_to 'WiÄ™cej...', event, class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>
